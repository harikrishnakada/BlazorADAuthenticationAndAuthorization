@page "/counter"
<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<AuthorizeView Policy="Management">
    <Authorized>
        <button class="btn btn-primary">Add</button>
        <button class="btn btn-primary">Delete</button>
    </Authorized>
</AuthorizeView>

<AuthorizeView Policy="NonManagement">
    <Authorized>
        <button class="btn btn-primary">Update</button>
    </Authorized>
    <NotAuthorized>
        <p>Not Authorized</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
